{
  {
  {
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", ".next"]
}


    "typeRoots": ["./node_modules/@types", "./types"], // or wherever your global.d.ts file is
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "types.d.ts",
    "src/**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    ".next/types/**/*.ts",
    "global.d.ts"
, "lib/mongodb.js", "components/FAQPage.tsx", "pages/api/saveUserData.js"  ],
  "exclude": [
    "node_modules"
  ]
}
